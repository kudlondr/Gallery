<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>connectionTestBean</managed-bean-name>
		<managed-bean-class>cz.cuni.mff.java.advanced.gallery.beans.ConnectionTest</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>imageBean</managed-bean-name>
		<managed-bean-class>cz.cuni.mff.java.advanced.gallery.beans.Image</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>user</property-name>
			<property-class>cz.cuni.mff.java.advanced.gallery.beans.User</property-class>
			<value>#{userBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userBean</managed-bean-name>
		<managed-bean-class>cz.cuni.mff.java.advanced.gallery.beans.User</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>commentBean</managed-bean-name>
		<managed-bean-class>cz.cuni.mff.java.advanced.gallery.beans.Comment</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>messageBean</managed-bean-name>
		<managed-bean-class>cz.cuni.mff.java.advanced.gallery.beans.Message</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>imagesContainerBean</managed-bean-name>
		<managed-bean-class>cz.cuni.mff.java.advanced.gallery.beans.ImagesContainer</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>imageCommentsBean</managed-bean-name>
		<managed-bean-class>cz.cuni.mff.java.advanced.gallery.beans.ImageComments</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>account.xhtml</display-name>
		<from-view-id>/account.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>repeat</from-outcome>
			<to-view-id>/account.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loginFailure</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loginSuccess</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createAccount</from-outcome>
			<to-view-id>/account.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>account.xhtml</display-name>
		<from-view-id>/account.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>uploadImage</from-outcome>
			<to-view-id>/imageUpload.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>imageUpload.xhtml</display-name>
		<from-view-id>/imageUpload.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>failure</from-outcome>
			<to-view-id>/imageUpload.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>imageUpload.xhtml</display-name>
		<from-view-id>/imageUpload.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>showImageDetail</from-outcome>
			<to-view-id>/imageDetail.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>imageDetail.xhtml</display-name>
		<from-view-id>/imageDetail.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>imageDetail.xhtml</display-name>
		<from-view-id>/imageDetail.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>refresh</from-outcome>
			<to-view-id>/imageDetail.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>imageDetail.xhtml</display-name>
		<from-view-id>/imageDetail.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{imageBean.user.showDetail()}</from-outcome>
			<to-view-id>/userDetail.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>userDetail.xhtml</display-name>
		<from-view-id>/userDetail.xhtml</from-view-id>
		<navigation-case>
			<to-view-id>/account.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>imageUpload.xhtml</display-name>
		<from-view-id>/imageUpload.xhtml</from-view-id>
		<navigation-case>
			<to-view-id>/account.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- <navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>manageAccount</from-outcome>
			<to-view-id>/account.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>-->
	<navigation-rule>
		<display-name>imageDetail.xhtml</display-name>
		<from-view-id>/imageDetail.xhtml</from-view-id>
		<navigation-case>
			<to-view-id>/account.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>manageAccount</from-outcome>
			<to-view-id>/account.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<validator>
		<display-name>cz.cuni.mff.java.advanced.gallery.validators.LoginChecker</display-name>
		<validator-id>cz.cuni.mff.java.advanced.gallery.validators.LoginChecker</validator-id>
		<validator-class>cz.cuni.mff.java.advanced.gallery.validators.LoginChecker</validator-class>
	</validator>

</faces-config>
